<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />
        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Contact 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shira_yogev"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shira_email"
            android:textSize="16sp"
            android:textColor="#0000EE"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:clickable="true"
            android:textIsSelectable="true" />
        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Contact 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/michael_idan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/michael_email"
            android:textSize="16sp"
            android:textColor="#0000EE"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:clickable="true"
            android:textIsSelectable="true" />
        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Contact 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shirel_cohen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shirel_email"
            android:textSize="16sp"
            android:textColor="#0000EE"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:clickable="true"
            android:textIsSelectable="true" />
        <!-- Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Contact 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daniel_bas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daniel_email"
            android:textSize="16sp"
            android:textColor="#0000EE"
            android:paddingBottom="12dp"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:clickable="true"
            android:textIsSelectable="true" />
    </LinearLayout>

</ScrollView>
